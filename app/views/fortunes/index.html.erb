            </div>
          <% end %>
        </div>
        <div class="top3_ranking_div">
          <%= link_to fortune_path(params_change_reverse(@overall_top3[2])) do %>
            <li class="ranking_img"><%= image_tag img_select(@overall_top3[2]) %></li>
            <li class="ranking_no3"><%= @overall_top3[2] %></li>
