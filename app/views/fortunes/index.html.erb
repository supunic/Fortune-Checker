      <h2>Today's Top3<small class="sub_title">星座占い総合ランキング</small></h2>
    </div>
    <div class="overall_ranking_div">
      <ul>
        <div class="top3_ranking_div">
          <%= link_to fortune_path(params_change_reverse(@overall_top3[0])) do %>
            <li class="ranking_img"><%= image_tag img_select(@overall_top3[0]) %></li>
            <li class="ranking_no1"><%= @overall_top3[0] %></li>
            <div class="ranking_div_about">
              <% @meza_result_1.each_with_index do |result, index| %>
                <% if result == "t" %>
                  <li class="meza_rank">めざまし<%= index+1 %>位</li>
                <% end %>
              <% end %>
              <% @gude_result_1.each_with_index do |result, index| %>
                <% if result == "t" %>
                  <li class="gude_rank">ぐでたま<%= index+1 %>位</li>
                <% end %>
              <% end %>
              <% @gogo_result_1.each_with_index do |result, index| %>
                <% if result == "t"  && index == 0 %>
                  <li class="gogo_rank_total">ゴーゴー総合1位</li>
                <% elsif result == "t"  && index == 1 %>
                  <li class="gogo_rank_gold">ゴーゴー金運1位</li>
                <% elsif result == "t"  && index == 2 %>
