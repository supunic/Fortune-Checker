                <% if result == "t" %>
                  <li>ぐでたま<%= index+1 %>位</li>
                <% end %>
              <% end %>
              <% @gogo_result_3.each_with_index do |result, index| %>
                <% if result == "t"  && index == 0 %>
                  <li>ゴーゴー総合1位</li>
                <% elsif result == "t"  && index == 1 %>
